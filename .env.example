# GUARDIAN System Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LLM API Settings (REQUIRED)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Application Settings
# ===========================================
APP_NAME=GUARDIAN Transaction Monitor
APP_VERSION=1.0.0
DEBUG=false

# ===========================================
# API Settings
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ===========================================
# Database Settings
# ===========================================
DATABASE_URL=sqlite:///./data/transactions.db
DATABASE_ECHO=false

# ===========================================
# Vector Database Settings (ChromaDB)
# ===========================================
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
BEHAVIORAL_COLLECTION_PREFIX=user_behavioral
POLICY_COLLECTION_NAME=policy_documents

# ===========================================
# LLM Model Settings
# ===========================================
LLM_MODEL=gpt-4-turbo-preview
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=30

# ===========================================
# Embedding Settings
# ===========================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ===========================================
# RAG Settings
# ===========================================
BEHAVIORAL_K_RESULTS=5
POLICY_K_RESULTS=5
POLICY_CHUNK_SIZE=400
POLICY_CHUNK_OVERLAP=50

# ===========================================
# Decision Thresholds
# ===========================================
THRESHOLD_LOW=0.3
THRESHOLD_HIGH=0.7

# ===========================================
# Fusion Weights
# ===========================================
BEHAVIORAL_WEIGHT=0.5
POLICY_WEIGHT=0.5

# ===========================================
# Learning Settings
# ===========================================
LEARNING_RATE=0.01
REWARD_CORRECT=10
PENALTY_FALSE_POSITIVE=-2
PENALTY_FALSE_NEGATIVE=-50

# ===========================================
# Data Paths
# ===========================================
USERS_DATA_PATH=./data/users
POLICIES_DATA_PATH=./data/policies
LOGS_PATH=./logs

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=10

# ===========================================
# Context Settings
# ===========================================
TRANSACTION_HISTORY_DAYS=30
